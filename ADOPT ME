	{name = "Sky Blue ‚òÅÔ∏è", main = Color3.fromRGB(235, 245, 255), header = Color3.fromRGB(245, 250, 255), accent = Color3.fromRGB(120, 180, 255), text = Color3.fromRGB(70, 100, 140)},
	{name = "Lemon Zest üçã", main = Color3.fromRGB(255, 255, 240), header = Color3.fromRGB(255, 255, 250), accent = Color3.fromRGB(255, 200, 80), text = Color3.fromRGB(130, 110, 50)}
}

local function applyTheme(theme)
	currentTheme = theme
	smoothTween(main, {BackgroundColor3 = theme.main}, 0.5):Play()
	smoothTween(header, {BackgroundColor3 = theme.header}, 0.5):Play()
	smoothTween(title, {TextColor3 = theme.text}, 0.5):Play()
	smoothTween(stepFrame, {BackgroundColor3 = theme.main}, 0.5):Play()
	smoothTween(stepHeader, {BackgroundColor3 = theme.header}, 0.5):Play()
	smoothTween(stepTitle, {TextColor3 = theme.text}, 0.5):Play()
	smoothTween(settingsPanel, {BackgroundColor3 = theme.main}, 0.5):Play()
	smoothTween(settingsHeader, {BackgroundColor3 = theme.header}, 0.5):Play()
	smoothTween(settingsTitle, {TextColor3 = theme.text}, 0.5):Play()
	smoothTween(nextBtn, {BackgroundColor3 = theme.accent}, 0.5):Play()
	
	-- Update all feature cards
	for _, child in ipairs(container:GetChildren()) do
		if child:IsA("Frame") and child.Name ~= "UIListLayout" and child.Name ~= "UIPadding" then
			smoothTween(child, {BackgroundColor3 = theme.header}, 0.5):Play()
			for _, subChild in ipairs(child:GetChildren()) do
				if subChild.Name == "TextLabel" and subChild.Text:find("^[ü•öü™Ω‚ú®üçº]") then
					smoothTween(subChild, {TextColor3 = theme.accent}, 0.5):Play()
				elseif subChild:IsA("TextLabel") and not subChild.Name:find("Icon") then
					if subChild.TextSize > 15 then
						smoothTween(subChild, {TextColor3 = theme.text}, 0.5):Play()
					else
						smoothTween(subChild, {TextColor3 = Color3.fromRGB(
							math.floor(theme.text.R * 255 * 1.4),
							math.floor(theme.text.G * 255 * 1.4),
							math.floor(theme.text.B * 255 * 1.4)
						)}, 0.5):Play()
					end
				elseif subChild.Name == "TextButton" and subChild.Text:find("‚ö°") then
					smoothTween(subChild, {BackgroundColor3 = theme.accent}, 0.5):Play()
				end
			end
		end
	end
	
	-- Update all settings sections
	for _, child in ipairs(settingsContainer:GetChildren()) do
		if child:IsA("Frame") then
			smoothTween(child, {BackgroundColor3 = theme.header}, 0.5):Play()
		end
	end
end

-- Color Changer Section
local function createColorSection()
	local colorSection = Instance.new("Frame")
	colorSection.Size = UDim2.new(0.98, 0, 0, 240)
	colorSection.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	colorSection.BackgroundTransparency = 0.4
	colorSection.BorderSizePixel = 0
	colorSection.Parent = settingsContainer
	createCorner(colorSection, 15)
	createStroke(colorSection, Color3.fromRGB(255, 255, 255), 1.5)
	
	local colorTitle = Instance.new("TextLabel", colorSection)
	colorTitle.Size = UDim2.new(1, -20, 0, 30)
	colorTitle.Position = UDim2.new(0, 10, 0, 10)
	colorTitle.BackgroundTransparency = 1
	colorTitle.Font = Enum.Font.GothamBold
	colorTitle.TextColor3 = Color3.fromRGB(70, 70, 110)
	colorTitle.TextSize = 17
	colorTitle.Text = "üé® Theme Colors"
	colorTitle.TextXAlignment = Enum.TextXAlignment.Left
	
	local colorGrid = Instance.new("Frame", colorSection)
	colorGrid.Size = UDim2.new(1, -20, 0, 190)
	colorGrid.Position = UDim2.new(0, 10, 0, 45)
	colorGrid.BackgroundTransparency = 1
	
	local gridLayout = Instance.new("UIGridLayout", colorGrid)
	gridLayout.CellSize = UDim2.new(0.48, -5, 0, 40)
	gridLayout.CellPadding = UDim2.new(0.02, 5, 0, 8)
	gridLayout.SortOrder = Enum.SortOrder.LayoutOrder
	
	for i, theme in ipairs(themes) do
		local themeBtn = Instance.new("TextButton", colorGrid)
		themeBtn.LayoutOrder = i
		themeBtn.BackgroundColor3 = theme.accent
		themeBtn.BackgroundTransparency = 0.3
		themeBtn.Font = Enum.Font.GothamBold
		themeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
		themeBtn.TextSize = 14
		themeBtn.Text = theme.name
		createCorner(themeBtn, 10)
		createStroke(themeBtn, Color3.fromRGB(255, 255, 255), 1)
		
		themeBtn.MouseEnter:Connect(function()
			smoothTween(themeBtn, {BackgroundTransparency = 0.1}, 0.2):Play()
		end)
		themeBtn.MouseLeave:Connect(function()
			smoothTween(themeBtn, {BackgroundTransparency = 0.3}, 0.2):Play()
		end)
		
		themeBtn.MouseButton1Click:Connect(function()
			applyTheme(theme)
		end)
	end
end

-- Anti-AFK Toggle
local antiAFKEnabled = false
local antiAFKConnection

local function createAntiAFK()
	local afkSection = Instance.new("Frame")
	afkSection.Size = UDim2.new(0.98, 0, 0, 80)
	afkSection.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	afkSection.BackgroundTransparency = 0.4
	afkSection.BorderSizePixel = 0
	afkSection.Parent = settingsContainer
	createCorner(afkSection, 15)
	createStroke(afkSection, Color3.fromRGB(255, 255, 255), 1.5)
	
	local afkTitle = Instance.new("TextLabel", afkSection)
	afkTitle.Size = UDim2.new(0.7, 0, 0, 30)
	afkTitle.Position = UDim2.new(0, 15, 0, 10)
	afkTitle.BackgroundTransparency = 1
	afkTitle.Font = Enum.Font.GothamBold
	afkTitle.TextColor3 = Color3.fromRGB(70, 70, 110)
	afkTitle.TextSize = 16
	afkTitle.Text = "üõ°Ô∏è Anti-AFK Protection"
	afkTitle.TextXAlignment = Enum.TextXAlignment.Left
	
	local afkDesc = Instance.new("TextLabel", afkSection)
	afkDesc.Size = UDim2.new(1, -20, 0, 20)
	afkDesc.Position = UDim2.new(0, 15, 0, 38)
	afkDesc.BackgroundTransparency = 1
	afkDesc.Font = Enum.Font.Gotham
	afkDesc.TextColor3 = Color3.fromRGB(120, 120, 160)
	afkDesc.TextSize = 13
	afkDesc.Text = "Prevents being kicked for inactivity"
	afkDesc.TextXAlignment = Enum.TextXAlignment.Left
	
	local toggleBtn = Instance.new("TextButton", afkSection)
	toggleBtn.Size = UDim2.new(0, 80, 0, 32)
	toggleBtn.Position = UDim2.new(1, -95, 0.5, -16)
	toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 200, 220)
	toggleBtn.BackgroundTransparency = 0.3
	toggleBtn.Font = Enum.Font.GothamBold
	toggleBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
	toggleBtn.TextSize = 14
	toggleBtn.Text = "OFF"
	createCorner(toggleBtn, 10)
	createStroke(toggleBtn, Color3.fromRGB(255, 255, 255), 1)
	
	toggleBtn.MouseButton1Click:Connect(function()
		antiAFKEnabled = not antiAFKEnabled
		
		if antiAFKEnabled then
			toggleBtn.Text = "ON"
			toggleBtn.BackgroundColor3 = Color3.fromRGB(100, 220, 150)
			
			local vu = game:GetService("VirtualUser")
			antiAFKConnection = game:GetService("Players").LocalPlayer.Idled:Connect(function()
				vu:Button2Down(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
				task.wait(1)
				vu:Button2Up(Vector2.new(0,0), workspace.CurrentCamera.CFrame)
			end)
		else
			toggleBtn.Text = "OFF"
			toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 200, 220)
			
			if antiAFKConnection then
				antiAFKConnection:Disconnect()
			end
		end
	end)
end

