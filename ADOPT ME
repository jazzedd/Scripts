-- FPS Counter
local function createFPSCounter()
	local fpsSection = Instance.new("Frame")
	fpsSection.Size = UDim2.new(0.98, 0, 0, 70)
	fpsSection.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	fpsSection.BackgroundTransparency = 0.4
	fpsSection.BorderSizePixel = 0
	fpsSection.Parent = settingsContainer
	createCorner(fpsSection, 15)
	createStroke(fpsSection, Color3.fromRGB(255, 255, 255), 1.5)
	
	local fpsTitle = Instance.new("TextLabel", fpsSection)
	fpsTitle.Size = UDim2.new(0.6, 0, 0, 30)
	fpsTitle.Position = UDim2.new(0, 15, 0, 8)
	fpsTitle.BackgroundTransparency = 1
	fpsTitle.Font = Enum.Font.GothamBold
	fpsTitle.TextColor3 = Color3.fromRGB(70, 70, 110)
	fpsTitle.TextSize = 16
	fpsTitle.Text = "üìä Performance"
	fpsTitle.TextXAlignment = Enum.TextXAlignment.Left
	
	local fpsCounter = Instance.new("TextLabel", fpsSection)
	fpsCounter.Size = UDim2.new(1, -20, 0, 25)
	fpsCounter.Position = UDim2.new(0, 15, 0, 38)
	fpsCounter.BackgroundTransparency = 1
	fpsCounter.Font = Enum.Font.GothamBold
	fpsCounter.TextColor3 = Color3.fromRGB(100, 220, 150)
	fpsCounter.TextSize = 18
	fpsCounter.Text = "FPS: Calculating..."
	fpsCounter.TextXAlignment = Enum.TextXAlignment.Left
	
	task.spawn(function()
		while fpsCounter and fpsCounter.Parent do
			local fps = math.floor(1 / RunService.RenderStepped:Wait())
			fpsCounter.Text = "FPS: " .. fps
			
			if fps >= 50 then
				fpsCounter.TextColor3 = Color3.fromRGB(100, 220, 150)
			elseif fps >= 30 then
				fpsCounter.TextColor3 = Color3.fromRGB(255, 200, 80)
			else
				fpsCounter.TextColor3 = Color3.fromRGB(255, 100, 100)
			end
			
			task.wait(0.5)
		end
	end)
end

