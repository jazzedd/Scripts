	smoothTween(settings, {BackgroundColor3 = Color3.fromRGB(35, 180, 55)}, 0.2):Play()
	smoothTween(settingsIcon, {TextTransparency = 0}, 0.2):Play()
end)
settings.MouseLeave:Connect(function()
	smoothTween(settings, {BackgroundColor3 = Color3.fromRGB(40, 201, 64)}, 0.2):Play()
	smoothTween(settingsIcon, {TextTransparency = 1}, 0.2):Play()
end)

settings.MouseButton1Click:Connect(function()
	-- Settings panel will open
	showSettingsPanel()
end)

