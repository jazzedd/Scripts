-- Step Logic
local function showSteps(titleText, steps)
	main.Visible = false
	stepFrame.Visible = true
	overlay.Visible = true
	stepTitle.Text = titleText
	
	smoothTween(overlay, {BackgroundTransparency = 0.5}):Play()
	smoothTween(blurEffect, {Size = 18}, 0.4):Play()
	
	stepFrame.Size = UDim2.new(0, 480, 0, 0)
	smoothTween(stepFrame, {Size = UDim2.new(0, 480, 0, 300)}, 0.5, Enum.EasingStyle.Back):Play()
	
	local index = 1
	
	local function updateStep()
		stepText.Text = steps[index]
		stepProgress.Text = index .. "/" .. #steps
		
		prevBtn.Visible = index > 1
		
		if index == #steps then
			nextBtn.Text = "‚úì Finish"
			nextBtn.BackgroundColor3 = Color3.fromRGB(100, 220, 150)
		else
			nextBtn.Text = "Next Step ‚Üí"
			nextBtn.BackgroundColor3 = Color3.fromRGB(120, 150, 255)
		end
		
		stepText.TextTransparency = 1
		smoothTween(stepText, {TextTransparency = 0}, 0.3):Play()
	end
	
	updateStep()
	
	local nextConn, prevConn
	
	nextConn = nextBtn.MouseButton1Click:Connect(function()
		if index < #steps then
			index += 1
			updateStep()
		else
			nextConn:Disconnect()
			if prevConn then prevConn:Disconnect() end
			
			smoothTween(stepFrame, {Size = UDim2.new(0, 480, 0, 0)}, 0.3):Play()
			smoothTween(overlay, {BackgroundTransparency = 1}, 0.3):Play()
			smoothTween(blurEffect, {Size = 0}, 0.3):Play()
			task.wait(0.3)
			
			stepFrame.Visible = false
			overlay.Visible = false
			main.Visible = true
		end
	end)
	
	prevConn = prevBtn.MouseButton1Click:Connect(function()
		if index > 1 then
			index -= 1
			updateStep()
		end
	end)
end

-- Processing Screen (Glassmorphism)
local function showProcessing(customText)
	local processingFrame = Instance.new("Frame", gui)
	processingFrame.AnchorPoint = Vector2.new(0.5, 0.5)
	processingFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
	processingFrame.Size = UDim2.new(0, 0, 0, 0)
	processingFrame.BackgroundColor3 = Color3.fromRGB(245, 245, 255)
	processingFrame.BackgroundTransparency = 0.2
	processingFrame.ZIndex = 60
	processingFrame.ClipsDescendants = true
	createCorner(processingFrame, 20)
	createStroke(processingFrame, Color3.fromRGB(255, 255, 255), 2)
	
	smoothTween(processingFrame, {Size = UDim2.new(0, 480, 0, 280)}, 0.5, Enum.EasingStyle.Back):Play()
	
	local icon = Instance.new("TextLabel", processingFrame)
	icon.Size = UDim2.new(0, 70, 0, 70)
	icon.Position = UDim2.new(0.5, -35, 0, 25)
	icon.BackgroundTransparency = 1
	icon.Font = Enum.Font.GothamBold
	icon.Text = "‚ö°"
	icon.TextSize = 52
	icon.TextColor3 = Color3.fromRGB(120, 150, 255)
	
	local spinConnection
	local rotation = 0
	spinConnection = RunService.RenderStepped:Connect(function(dt)
		rotation = (rotation + dt * 100) % 360
		icon.Rotation = rotation
	end)
	
	local titleLabel = Instance.new("TextLabel", processingFrame)
	titleLabel.Size = UDim2.new(0.9, 0, 0, 40)
	titleLabel.Position = UDim2.new(0.05, 0, 0, 105)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = Enum.Font.GothamBold
	titleLabel.Text = "Processing..."
	titleLabel.TextSize = 24
	titleLabel.TextColor3 = Color3.fromRGB(70, 70, 110)
	
	local desc = Instance.new("TextLabel", processingFrame)
	desc.Size = UDim2.new(0.88, 0, 0, 50)
	desc.Position = UDim2.new(0.06, 0, 0, 150)
	desc.BackgroundTransparency = 1
	desc.Font = Enum.Font.Gotham
	desc.TextWrapped = true
	desc.TextColor3 = Color3.fromRGB(100, 100, 150)
	desc.TextSize = 16
	desc.Text = customText or "Executing action..."
	
	local barBG = Instance.new("Frame", processingFrame)
	barBG.Size = UDim2.new(0.85, 0, 0, 10)
	barBG.Position = UDim2.new(0.075, 0, 0, 220)
	barBG.BackgroundColor3 = Color3.fromRGB(220, 220, 240)
	barBG.BackgroundTransparency = 0.3
	createCorner(barBG, 5)
	
	local bar = Instance.new("Frame", barBG)
	bar.Size = UDim2.new(0, 0, 1, 0)
	bar.BackgroundColor3 = Color3.fromRGB(120, 150, 255)
	bar.BackgroundTransparency = 0.2
	createCorner(bar, 5)
	
	local percentage = Instance.new("TextLabel", processingFrame)
	percentage.Size = UDim2.new(1, 0, 0, 30)
	percentage.Position = UDim2.new(0, 0, 0, 240)
	percentage.BackgroundTransparency = 1
	percentage.Font = Enum.Font.GothamBold
	percentage.TextSize = 15
	percentage.TextColor3 = Color3.fromRGB(120, 150, 255)
	percentage.Text = "0%"
	
	local tweenInfo = TweenInfo.new(5.5, Enum.EasingStyle.Sine)
	local goal = {Size = UDim2.new(1, 0, 1, 0)}
	local barTween = TweenService:Create(bar, tweenInfo, goal)
	barTween:Play()
	
	task.spawn(function()
		for i = 0, 100, 2 do
			percentage.Text = i .. "%"
			task.wait(0.11)
		end
	end)
	
	task.wait(5.5)
	
	spinConnection:Disconnect()
	icon.Text = "‚úì"
	icon.Rotation = 0
	icon.TextColor3 = Color3.fromRGB(100, 220, 150)
	titleLabel.Text = "Completed!"
	titleLabel.TextColor3 = Color3.fromRGB(100, 220, 150)
	desc.Text = "Everything is ready! üéâ"
	percentage.Text = "100%"
	
	smoothTween(bar, {BackgroundColor3 = Color3.fromRGB(100, 220, 150)}, 0.3):Play()
	task.wait(1.8)
	
	smoothTween(processingFrame, {Size = UDim2.new(0, 0, 0, 0)}, 0.4, Enum.EasingStyle.Back):Play()
	task.wait(0.4)
	processingFrame:Destroy()
end

-- Create Glossy Feature Card
local function createFeatureButton(icon, title, description, tutorialTitle, steps)
	local section = Instance.new("Frame")
	section.Size = UDim2.new(0.98, 0, 0, 105)
	section.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
	section.BackgroundTransparency = 0.4
	section.BorderSizePixel = 0
	section.Parent = container
	createCorner(section, 15)
	createStroke(section, Color3.fromRGB(255, 255, 255), 1.5)
	
	local iconLabel = Instance.new("TextLabel", section)
	iconLabel.Size = UDim2.new(0, 55, 0, 55)
	iconLabel.Position = UDim2.new(0, 15, 0, 12)
	iconLabel.BackgroundTransparency = 1
	iconLabel.Font = Enum.Font.GothamBold
	iconLabel.Text = icon
	iconLabel.TextSize = 36
	iconLabel.TextColor3 = Color3.fromRGB(100, 130, 255)
	
	local titleLabel = Instance.new("TextLabel", section)
	titleLabel.Size = UDim2.new(1, -85, 0, 28)
	titleLabel.Position = UDim2.new(0, 78, 0, 10)
	titleLabel.BackgroundTransparency = 1
	titleLabel.Font = Enum.Font.GothamBold
	titleLabel.TextColor3 = Color3.fromRGB(60, 60, 100)
	titleLabel.TextSize = 18
	titleLabel.Text = title
	titleLabel.TextXAlignment = Enum.TextXAlignment.Left
	
	local descLabel = Instance.new("TextLabel", section)
	descLabel.Size = UDim2.new(1, -85, 0, 22)
	descLabel.Position = UDim2.new(0, 78, 0, 38)
	descLabel.BackgroundTransparency = 1
	descLabel.Font = Enum.Font.Gotham
	descLabel.TextColor3 = Color3.fromRGB(120, 120, 160)
	descLabel.TextSize = 14
	descLabel.Text = description
	descLabel.TextXAlignment = Enum.TextXAlignment.Left
	
	local tutorialBtn = Instance.new("TextButton", section)
	tutorialBtn.Size = UDim2.new(0.47, -6, 0, 32)
	tutorialBtn.Position = UDim2.new(0, 10, 1, -42)
	tutorialBtn.BackgroundColor3 = Color3.fromRGB(180, 180, 220)
	tutorialBtn.BackgroundTransparency = 0.4
	tutorialBtn.Font = Enum.Font.GothamBold
	tutorialBtn.TextColor3 = Color3.fromRGB(70, 70, 110)
	tutorialBtn.TextSize = 14
	tutorialBtn.Text = "üìñ Tutorial"
	createCorner(tutorialBtn, 10)
	createStroke(tutorialBtn, Color3.fromRGB(255, 255, 255), 1)
	
	local executeBtn = Instance.new("TextButton", section)
	executeBtn.Size = UDim2.new(0.47, -6, 0, 32)
	executeBtn.Position = UDim2.new(0.53, 2, 1, -42)
	executeBtn.BackgroundColor3 = Color3.fromRGB(120, 150, 255)
	executeBtn.BackgroundTransparency = 0.2
	executeBtn.Font = Enum.Font.GothamBold
	executeBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
	executeBtn.TextSize = 14
	executeBtn.Text = "‚ö° Execute"
	createCorner(executeBtn, 10)
	createStroke(executeBtn, Color3.fromRGB(255, 255, 255), 1)
	
	-- Hover effects
	tutorialBtn.MouseEnter:Connect(function()
		smoothTween(tutorialBtn, {BackgroundTransparency = 0.2}, 0.2):Play()
	end)
	tutorialBtn.MouseLeave:Connect(function()
		smoothTween(tutorialBtn, {BackgroundTransparency = 0.4}, 0.2):Play()
	end)
	
	executeBtn.MouseEnter:Connect(function()
		smoothTween(executeBtn, {BackgroundTransparency = 0}, 0.2):Play()
	end)
	executeBtn.MouseLeave:Connect(function()
		smoothTween(executeBtn, {BackgroundTransparency = 0.2}, 0.2):Play()
	end)
	
	tutorialBtn.MouseButton1Click:Connect(function()
		showSteps(tutorialTitle, steps)
	end)
	
	executeBtn.MouseButton1Click:Connect(function()
		local message = ""
		if title:find("Hatch") then
			message = "ü•ö Instant hatching your desired egg..."
		elseif title:find("Potion") then
			message = "üß™ Brewing Fly Ride potion magic..."
		elseif title:find("Mega") or title:find("Neon") then
			message = "‚ú® Combining pets for Mega Neon results..."
		elseif title:find("Grown") then
			message = "üçº Training your pet to full grown level..."
		else
			message = "‚ö° Processing your request..."
		end
		showProcessing(message)
	end)
end

