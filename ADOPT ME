-- Minimize Button
local isMinimized = false
minimize.MouseEnter:Connect(function()
	smoothTween(minimize, {BackgroundColor3 = Color3.fromRGB(255, 170, 30)}, 0.2):Play()
	smoothTween(minimizeIcon, {TextTransparency = 0}, 0.2):Play()
end)
minimize.MouseLeave:Connect(function()
	smoothTween(minimize, {BackgroundColor3 = Color3.fromRGB(255, 189, 46)}, 0.2):Play()
	smoothTween(minimizeIcon, {TextTransparency = 1}, 0.2):Play()
end)

minimize.MouseButton1Click:Connect(function()
	isMinimized = not isMinimized
	if isMinimized then
		smoothTween(main, {Size = UDim2.new(0, 420, 0, 65)}, 0.3):Play()
		minimizeIcon.Text = "+"
	else
		smoothTween(main, {Size = UDim2.new(0, 420, 0, 520)}, 0.3):Play()
		minimizeIcon.Text = "‚àí"
	end
end)

