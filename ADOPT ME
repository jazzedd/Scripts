-- Show settings function
function showSettingsPanel()
	settingsPanel.Visible = true
	overlay.Visible = true
	main.Visible = false
	
	smoothTween(overlay, {BackgroundTransparency = 0.5}):Play()
	smoothTween(blurEffect, {Size = 18}, 0.4):Play()
	
	settingsPanel.Size = UDim2.new(0, 450, 0, 0)
	smoothTween(settingsPanel, {Size = UDim2.new(0, 450, 0, 380)}, 0.5, Enum.EasingStyle.Back):Play()
end

closeSettings.MouseButton1Click:Connect(function()
	smoothTween(settingsPanel, {Size = UDim2.new(0, 450, 0, 0)}, 0.3):Play()
	smoothTween(overlay, {BackgroundTransparency = 1}, 0.3):Play()
	smoothTween(blurEffect, {Size = 0}, 0.3):Play()
	task.wait(0.3)
	
	settingsPanel.Visible = false
	overlay.Visible = false
	main.Visible = true
end)

-- Intro Animation
main.Size = UDim2.new(0, 0, 0, 0)
main.Visible = true
task.wait(0.1)
smoothTween(main, {Size = UDim2.new(0, 420, 0, 520)}, 0.6, Enum.EasingStyle.Back):Play()

