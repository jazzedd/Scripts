-- Simple Jazrad Hub Loading Screen
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "JazradLoader"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Main Container (no background frame)
local container = Instance.new("Frame")
container.AnchorPoint = Vector2.new(0.5, 0.5)
container.Size = UDim2.new(0, 400, 0, 250)
container.Position = UDim2.new(0.5, 0, 0.5, 0)
container.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
container.BorderSizePixel = 0
container.Parent = screenGui

local containerCorner = Instance.new("UICorner")
containerCorner.CornerRadius = UDim.new(0, 15)
containerCorner.Parent = container

local containerStroke = Instance.new("UIStroke")
containerStroke.Color = Color3.fromRGB(0, 191, 255)
containerStroke.Thickness = 2
containerStroke.Parent = container

-- Logo Text
local logo = Instance.new("TextLabel")
logo.Size = UDim2.new(1, 0, 0, 60)
logo.Position = UDim2.new(0, 0, 0, 30)
logo.BackgroundTransparency = 1
logo.Text = "JAZRAD HUB"
logo.TextColor3 = Color3.fromRGB(255, 255, 255)
logo.TextSize = 32
logo.Font = Enum.Font.GothamBold
logo.Parent = container

-- Version
local version = Instance.new("TextLabel")
version.Size = UDim2.new(1, 0, 0, 20)
version.Position = UDim2.new(0, 0, 0, 90)
version.BackgroundTransparency = 1
version.Text = "v1.7.0"
version.TextColor3 = Color3.fromRGB(0, 191, 255)
version.TextSize = 14
version.Font = Enum.Font.Gotham
version.Parent = container

-- Progress Bar Background
local progressBg = Instance.new("Frame")
progressBg.Size = UDim2.new(0.8, 0, 0, 8)
progressBg.Position = UDim2.new(0.1, 0, 0, 140)
progressBg.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
progressBg.BorderSizePixel = 0
progressBg.Parent = container

local progressBgCorner = Instance.new("UICorner")
progressBgCorner.CornerRadius = UDim.new(1, 0)
progressBgCorner.Parent = progressBg

-- Progress Bar Fill
local progressFill = Instance.new("Frame")
progressFill.Size = UDim2.new(0, 0, 1, 0)
progressFill.BackgroundColor3 = Color3.fromRGB(0, 191, 255)
progressFill.BorderSizePixel = 0
progressFill.Parent = progressBg

local progressFillCorner = Instance.new("UICorner")
progressFillCorner.CornerRadius = UDim.new(1, 0)
progressFillCorner.Parent = progressFill

-- Percentage
local percent = Instance.new("TextLabel")
percent.Size = UDim2.new(1, 0, 0, 30)
percent.Position = UDim2.new(0, 0, 0, 160)
percent.BackgroundTransparency = 1
percent.Text = "0%"
percent.TextColor3 = Color3.fromRGB(0, 191, 255)
percent.TextSize = 20
percent.Font = Enum.Font.GothamBold
percent.Parent = container

-- Status Text
local status = Instance.new("TextLabel")
status.Size = UDim2.new(1, 0, 0, 20)
status.Position = UDim2.new(0, 0, 0, 200)
status.BackgroundTransparency = 1
status.Text = "Loading..."
status.TextColor3 = Color3.fromRGB(150, 150, 180)
status.TextSize = 13
status.Font = Enum.Font.Gotham
status.Parent = container

-- Loading Animation
local currentProgress = 0

local function updateProgress(target, duration)
    local startProgress = currentProgress
    local startTime = tick()
    
    while currentProgress < target do
        local elapsed = tick() - startTime
        local alpha = math.min(elapsed / duration, 1)
        currentProgress = startProgress + (target - startProgress) * alpha
        
        progressFill.Size = UDim2.new(currentProgress / 100, 0, 1, 0)
        percent.Text = math.floor(currentProgress) .. "%"
        
        if alpha >= 1 then break end
        task.wait(0.03)
    end
    
    currentProgress = target
    progressFill.Size = UDim2.new(currentProgress / 100, 0, 1, 0)
    percent.Text = math.floor(currentProgress) .. "%"
end

local function updateStatus(text)
    status.Text = text
end

-- Loading Sequence
task.spawn(function()
    task.wait(0.3)
    
    updateStatus("Connecting...")
    updateProgress(25, 0.6)
    task.wait(0.6)
    
    updateStatus("Loading modules...")
    updateProgress(50, 0.6)
    task.wait(0.6)
    
    updateStatus("Preparing interface...")
    updateProgress(75, 0.6)
    task.wait(0.6)
    
    updateStatus("Almost done...")
    updateProgress(100, 0.4)
    task.wait(0.5)
    
    -- Fade out
    TweenService:Create(container, TweenInfo.new(0.5), {BackgroundTransparency = 1}):Play()
    TweenService:Create(containerStroke, TweenInfo.new(0.5), {Transparency = 1}):Play()
    TweenService:Create(logo, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    TweenService:Create(version, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    TweenService:Create(percent, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    TweenService:Create(status, TweenInfo.new(0.5), {TextTransparency = 1}):Play()
    
    task.wait(0.6)
    screenGui:Destroy()
    
    -- Load your main script
    pcall(function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/TrGhann/dibuhhh/refs/heads/main/kukinlpoh"))()
    end)
end)
